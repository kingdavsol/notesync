{
  "expo": {
    "name": "NoteSync",
    "slug": "notesync",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "owner": "markd98",
    "extra": {
      "eas": {
        "projectId": "b30e6bd3-4217-4a85-b13f-628721a8462b"
      }
    },
    "splash": {
      "image": "./assets/splash.png",
      "backgroundColor": "#2dbe60",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.gg9.notesync"
    },
    "android": {
      "package": "app.gg9.notesync",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2dbe60"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-dev-client",
      "expo-updates",
      [
        "expo-image-picker",
        {
          "photosPermission": "NoteSync needs access to your photos to attach images to notes.",
          "cameraPermission": "NoteSync needs access to your camera to take photos for notes."
        }
      ],
      "expo-localization"
    ]
  }
}
